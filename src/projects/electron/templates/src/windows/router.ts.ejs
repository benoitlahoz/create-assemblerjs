<% } else { %>// Vanilla JavaScript Router
import Home from '@/renderer/components/Home';
import About from '@/renderer/components/About';

const routes = {
  '/': Home,
  '/home': Home,
  '/about': About
};

export class Router {
  private currentPath: string = '/';
  private container: HTMLElement | null = null;

  constructor(containerSelector: string = '#app') {
    this.container = document.querySelector(containerSelector);
    this.currentPath = window.location.pathname || '/';
    
    window.addEventListener('popstate', () => {
      this.navigate(window.location.pathname);
    });
    
    this.navigate(this.currentPath);
  }

  navigate(path: string) {
    this.currentPath = path;
    const ComponentClass = routes[path] || routes['/'];
    
    if (this.container && ComponentClass) {
      this.container.innerHTML = '';
      const component = new ComponentClass(this.container);
      component.render();
    }
    
    window.history.pushState({}, '', path);
  }

  getCurrentPath(): string {
    return this.currentPath;
  }
}

export const router = new Router();
