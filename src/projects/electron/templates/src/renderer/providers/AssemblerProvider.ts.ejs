<% if (isReact()) { %>import React, { ReactNode } from 'react';
import { AssemblerReactContext } from '@/renderer/constants/injection.keys';
import { AssemblerContext } from 'assemblerjs';

interface AssemblerProviderProps {
  context: AssemblerContext;
  children: ReactNode;
}

/**
 * React provider component for AssemblerJS context
 * Wrap your root component with this provider
 * 
 * @example
 * <AssemblerProvider context={assembler.getContext()}>
 *   <App />
 * </AssemblerProvider>
 */
export const AssemblerProvider: React.FC<AssemblerProviderProps> = ({ context, children }) => {
  return (
    <AssemblerReactContext.Provider value={context}>
      {children}
    </AssemblerReactContext.Provider>
  );
};
<% } else if (isSolid()) { %>import { JSX } from 'solid-js';
import { AssemblerSolidContext } from '@/renderer/constants/injection.keys';
import { AssemblerContext } from 'assemblerjs';

interface AssemblerProviderProps {
  context: AssemblerContext;
  children: JSX.Element;
}

/**
 * Solid provider component for AssemblerJS context
 * Wrap your root component with this provider
 * 
 * @example
 * <AssemblerProvider context={assembler.getContext()}>
 *   <App />
 * </AssemblerProvider>
 */
export const AssemblerProvider = (props: AssemblerProviderProps) => {
  return (
    <AssemblerSolidContext.Provider value={props.context}>
      {props.children}
    </AssemblerSolidContext.Provider>
  );
};
