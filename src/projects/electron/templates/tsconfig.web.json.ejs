{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "index.d.ts",
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",<% if (isVue()) { %>
    "src/renderer/src/**/*.vue",<% } %><% if (isReact()) { %>
    "src/renderer/src/**/*.tsx",<% } %>
    "src/preload/*.d.ts",
    "src/features/**/*",
    "src/windows/**/*",
    "resources/**/*"
  ],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,<% if (isReact()) { %>
    "jsx": "react-jsx",<% } %>
    "paths": {
      "@/features/*": ["src/features/*"],
      "@/main/*": ["src/main/*"],
      "@/preload/*": ["src/preload/*"],
      "@/renderer/*": ["src/renderer/src/*"],
      "@/windows/*": ["src/windows/*"]
    }
  }<% if (hasOption('vue')) { %>,
  "vueCompilerOptions": {<% if (hasOption('pug')) { %>
    "plugins": ["@vue/language-plugin-pug"]<% } %>
  }<% } %>
}
